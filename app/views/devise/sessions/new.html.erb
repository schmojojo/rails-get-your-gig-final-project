<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-5">
      <div class="card shadow-lg border-0 rounded-3">
        <div class="card-body p-4 p-sm-5">
          <h2 class="card-title text-center mb-4">Log in</h2>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email", class: "form-control-lg" } %>
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password", class: "form-control-lg" } %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>

            <div class="form-actions mt-4">
              <%= f.button :submit, "Log in", class: "btn btn-purple btn-lg w-100" %>
            </div>
          <% end %>

          <div class="text-center mt-4">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
