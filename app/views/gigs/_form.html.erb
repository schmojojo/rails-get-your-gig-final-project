<%= form_with(model: gig, class: "p-4 border rounded-3 bg-light") do |form| %>

  <% if gig.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(gig.errors.count, "error") %> prevented this gig from being saved:</h2>
      <ul>
        <% gig.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, class: 'form-label' do %>
      Title <span class="text-danger">*</span>
    <% end %>
    <%= form.text_field :title, class: 'form-control', required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :category, class: 'form-label' do %>
      Category <span class="text-danger">*</span>
    <% end %>
    <%= form.text_field :category, class: 'form-control', required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: 'form-label' do %>
      Description <span class="text-danger">*</span>
    <% end %>
    <%= form.text_area :description, class: 'form-control', rows: 5, required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :contact, class: 'form-label' do %>
      Contact (email / phone / link) <span class="text-danger">*</span>
    <% end %>
    <%= form.text_field :contact, class: 'form-control', required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :source, class: 'form-label' do %>
      Source URL <span class="text-danger">*</span>
    <% end %>
    <%= form.text_field :source, class: 'form-control', required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :date, class: 'form-label' do %>
      Date posted <span class="text-danger">*</span>
    <% end %>
    <%= form.date_field :date, class: 'form-control', required: true %>
  </div>

  <div class="d-grid">
    <%= form.submit "Save Gig", class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
