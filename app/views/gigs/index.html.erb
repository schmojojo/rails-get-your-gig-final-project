<div class="container mt-5">
  <h1 class="mb-4 text-center">Available Freelance Gigs</h1>

  <div class="row">
    <% @gigs.each do |gig| %>
      <div class="col-md-4 mb-4">
        <div class="card shadow-sm h-100">
          <div class="card-body d-flex flex-column">

            <!-- Title + Source -->
            <h5 class="card-title mb-2">
              <a href="<%= gig.source.present? ? gig.source : '#' %>" class="text-decoration-none">
                <%= gig.title %>
              </a>
            </h5>

            <!-- Category Pills -->
            <div class="mb-2">
              <span class="badge rounded-pill bg-primary"><%= gig.category %></span>
            </div>

            <!-- Description -->
            <p class="card-text flex-grow-1"><%= truncate(gig.description, length: 150) %></p>

            <!-- Contact Button -->
            <a href="mailto:<%= gig.contact %>" class="btn btn-outline-primary rounded-pill mb-2">
              Contact
            </a>

            <!-- Date -->
            <small class="text-muted">
              <i class="fa fa-calendar-alt"></i>
              <%= gig.date.strftime("%B %d, %Y") %>
            </small>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
