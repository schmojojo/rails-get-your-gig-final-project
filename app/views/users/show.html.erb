<div class="container mt-5">
  <div class="row">
    <div class="col-lg-8 mx-auto">

      <div class="card shadow-sm mb-4">
        <div class="card-body">
          <h2 class="mb-2">Welcome to your profile, <%= current_user.first_name || "User" %>!</h2>
        </div>
      </div>

         <% if policy(User).index? %>
          <div class="text-center mt-4 mb-4">
          <%= link_to "View all users (admin only)", users_path, class: "btn btn-outline-primary" %>
          </div>
        <% end %>

      <div class="card shadow-sm mb-4">
        <div class="card-header bg-white">
          <h4 class="mb-0"><i class="bi bi-gear me-2"></i>Account settings</h4>
        </div>
        <div class="card-body">
          <div class="list-group list-group-flush">
            <!-- First Name -->
            <div class="list-group-item px-0">
              <h6 class="mb-1">First name</h6>
              <p class="text-muted mb-0 small"><%= current_user.first_name || "Not set" %></p>
            </div>

            <!-- Last Name -->
            <div class="list-group-item px-0">
              <h6 class="mb-1">Last name</h6>
              <p class="text-muted mb-0 small"><%= current_user.last_name || "Not set" %></p>
            </div>

            <!-- Contact Email -->
            <div class="list-group-item px-0">
              <h6 class="mb-1">Contact email</h6>
              <p class="text-muted mb-0 small"><%= current_user.email %></p>
            </div>

            <!-- Password -->
            <div class="list-group-item px-0">
              <h6 class="mb-1">Password</h6>
              <p class="text-muted mb-0 small">••••••••</p>
            </div>
          </div>

          <!-- Single Edit Button -->
          <div class="mt-3">
            <%= link_to "Edit profile", edit_profile_path, class: "btn btn-outline-primary w-100" %>
          </div>
        </div>
      </div>

      <!-- Logout Box -->
      <div class="card shadow-sm mb-4">
        <div class="card-body p-4">
          <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "btn btn-outline-secondary w-100" %>
        </div>
      </div>

      <!-- Delete Account - Subtle -->
      <div class="text-center mt-4 mb-5">
        <small class="text-muted">
          Need to delete your account?
          <a href="#" class="text-muted" style="text-decoration: underline;" data-bs-toggle="modal" data-bs-target="#deleteAccountModal">
            Delete account
          </a>
        </small>
      </div>

    </div>
  </div>
</div>

<!-- Delete Account Modal -->
<div class="modal fade" id="deleteAccountModal" tabindex="-1" aria-labelledby="deleteAccountModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header border-0">
        <h5 class="modal-title fw-bold" id="deleteAccountModalLabel">Delete account</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body py-4">
        <p class="mb-3">Are you sure you want to delete your account?</p>
        <p class="mb-0">
          <span class="fw-bold">This action cannot be undone.</span>
          <span class="text-muted">All your data will be permanently deleted.</span>
        </p>
      </div>
      <div class="modal-footer border-0 pt-0">
        <button type="button" class="btn btn-secondary px-4 py-2" data-bs-dismiss="modal">Cancel</button>
        <%= button_to "Delete my account", profile_path, method: :delete, class: "btn btn-primary px-4 py-2" %>      </div>
    </div>
  </div>
</div>
