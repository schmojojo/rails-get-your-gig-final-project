<!-- app/views/users/edit_password.html.erb -->
<div class="container mt-5">
  <div class="row">
    <div class="col-lg-6 mx-auto">
      <div class="card shadow-sm">
        <div class="card-body p-4">
          <h2 class="card-title mb-4">Change Password</h2>

          <%= simple_form_for(@user, url: update_password_path, method: :patch) do |f| %>
            <%= f.error_notification %>

            <div class="form-inputs">
              <%= f.input :current_password,
                          label: "Current Password",
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "current-password", class: "form-control-lg" },
                          wrapper_html: { class: "mb-3" } %>

              <%= f.input :password,
                          label: "New Password",
                          required: true,
                          hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                          input_html: { autocomplete: "new-password", class: "form-control-lg" },
                          wrapper_html: { class: "mb-3" } %>

              <%= f.input :password_confirmation,
                          label: "Confirm New Password",
                          required: true,
                          input_html: { autocomplete: "new-password", class: "form-control-lg" },
                          wrapper_html: { class: "mb-3" } %>
            </div>

            <div class="form-actions mt-4 d-flex gap-2">
              <%= f.button :submit, "Update Password", class: "btn btn-primary btn-lg flex-grow-1" %>
              <%= link_to "Cancel", profile_path, class: "btn btn-secondary btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
