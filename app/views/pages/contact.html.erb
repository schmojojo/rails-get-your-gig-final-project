<div class="container py-5 mb-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-10 col-lg-8">
      <div class="card shadow-lg border-0 rounded-3">
        <div class="card-body p-4 p-sm-5">

          <div class="text-center mb-5">
            <h2 class="card-title">Leave us a message</h2>
            <p class="text-gray-medium">Get in touch â€” we'd love to hear from you!</p>
          </div>

          <%= form_with url: "#", method: :post, local: true do |f| %>
            <div class="row g-3">
              <div class="col-md-6">
                <%= f.label :first_name, class: "form-label" %>
                <%= f.text_field :first_name, class: "form-control form-control-lg", required: true %>
              </div>
              <div class="col-md-6">
                <%= f.label :last_name, class: "form-label" %>
                <%= f.text_field :last_name, class: "form-control form-control-lg", required: true %>
              </div>
            </div>

            <div class="mt-3">
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email, class: "form-control form-control-lg", required: true %>
            </div>

            <div class="mt-3">
              <%= f.label :message, class: "form-label" %>
              <%= f.text_area :message, rows: 5, class: "form-control form-control-lg", required: true %>
            </div>

            <div class="text-center mt-4">
              <%= f.submit "Submit message", class: "btn btn-purple btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
